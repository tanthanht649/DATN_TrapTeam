{
  "extends": "@tsconfig/react-native/tsconfig.json",
  // "forceConsistentCasingInFileNames": false,
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "lib": [
      "es2019",
      "es2020.bigint",
      "es2020.date",
      "es2020.number",
      "es2020.promise",
      "es2020.string",
      "es2020.symbol.wellknown",
      "es2021.promise",
      "es2021.string",
      "es2021.weakref",
      "es2022.array",
      "es2022.object",
      "es2022.string"
    ],
    "allowJs": true,
    "jsx": "react-native",
    "noEmit": true,
    "isolatedModules": true,
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      // Top level alias
      "@assets": ["assets"],
      "@presentation": ["src/presentation"],
      "@domain": ["src/domain"],
      "@data": ["src/data"],
      "@core": ["src/core"],
      "@di": ["src/di"],
      // Presentation level alias
      "@hocs": ["src/presentation/hoc"],
      "@hooks": ["src/presentation/hook"],
      "@components": ["src/presentation/component"],
      "@containers": ["src/presentation/container"],
      "@resources": ["src/presentation/resource"],
      "@storyboards": ["src/presentation/storyboard"],
      "@shared-state": ["src/presentation/shared-state"],
      "@navigation": ["src/presentation/navigation"]
    },
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
